<% 
require Refinery::Caststone::ComponentsHelper
comp_list = []
#Get the components in the order defined by COMP_TYPES (allows for bottom-to-top drawing)
Refinery::Caststone::Component::COMP_TYPES.each do |comp_type|
#get the subclass name
  comp_type_sub=comp_type.tableize
  #get the right drawings into the photolist
  if self.send(comp_type_sub).any?
    self.send(comp_type_sub).each do |i|
      comp_list.push(i.id)
    end
  end
end
draw(comp_list,200,600)


%>