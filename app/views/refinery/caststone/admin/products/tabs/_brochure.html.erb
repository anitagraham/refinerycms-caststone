<div id="product_brochure" class="field" >
  <%= f.label :brochure %>
  <%= render partial: "/refinery/admin/resource_picker",
             locals: {
               f: f,
               field: :brochure_id,
               resource: f.object.brochure
             }
  %>
</div >
<div class="field_group" >
  <div class="field" >
    <%= f.label :download_text %>
    <%= f.text_field :download_text %>
  </div >
  <div class="field" >
    <%= f.label :download_title %>
    <%= f.text_field :download_title %>
  </div >
</div >

<div id="product_brochure_cover" class="field" >
  <%= f.label :brochure_cover %>
  <%= render partial: "/refinery/admin/image_picker",
             locals: {
               f: f,
               field: :brochure_cover_id,
               image: f.object.brochure_cover,
               toggle_image_display: false
             }
  %>

</div >
