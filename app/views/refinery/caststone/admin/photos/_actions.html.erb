<ul>
  <% if ::Refinery::Caststone::Admin::PhotosController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.caststone_admin_photos_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_caststone_admin_photo_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Caststone::Admin::PhotosController.sortable? && ::Refinery::Caststone::Photo.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Photos"),
                 refinery.caststone_admin_photos_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Photos"),
                 refinery.caststone_admin_photos_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>


</ul>
