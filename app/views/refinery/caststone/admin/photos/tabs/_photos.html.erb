<%
  photos = Refinery::Caststone::Photo.complete
  nophotos = tag.p t('.no_photos_yet')
  photo_collection = collection_select :page, :photo_ids, photos, :id, :name, {},
                                       {multiple: true,
                                        class:  :multiselect,
                                        id: :photo_multiselect}
  selection = photos.present? ? photo_collection : nophotos

  content = tag.div selection, class: 'wym_skin_refinery page_part', id: 'page_photo_picker'
%>
<%= content %>
